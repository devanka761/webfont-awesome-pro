{
  "compilerOptions": {
    "target": "es2020",
    "types": [
      "node"
    ],
    "module": "esnext",
    "declaration": true,
    "declarationDir": "dist/types",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/*",
    "./dist/**/*",
    "./src/local.ts"
  ]
}